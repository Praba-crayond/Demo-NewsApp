<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/advertisement_image"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="#e5e5e5"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/xsmall"
            android:text="jan 13th 2016"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium"
            android:text="Nicole Chavez, CNN"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/large"
            android:layout_height="wrap_content"
            android:text="Harvey makes second landfall along Louisiana-Texas border"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:textSize="@dimen/small"
            android:layout_height="wrap_content"
            android:text="The devastating storm that swept through Texas made a second landfall Wednesday near the Louisiana-Texas border and is drenching the region with rain."
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Source:"
            android:textStyle="bold"
            android:textSize="@dimen/xsmall"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/source_link"
            android:layout_width="wrap_content"
            android:textSize="@dimen/xsmall"
            android:layout_height="wrap_content"
            android:text="adsdsds"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</android.support.v7.widget.CardView>